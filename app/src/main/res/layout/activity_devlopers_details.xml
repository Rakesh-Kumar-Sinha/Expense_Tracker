<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layouts.layouts.DevelopersDetails">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:padding="@dimen/_2sdp"
        android:background="#125488"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toolImgBack"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:src="@drawable/baseline_arrow_back_ios_24" />

    </RelativeLayout>
    
    
    <androidx.cardview.widget.CardView
        android:layout_below="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp"
        android:id="@+id/logo"
        android:layout_margin="@dimen/_10sdp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qlogo"
            android:layout_marginBottom="@dimen/_10sdp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/logo"
        android:id="@+id/cardRakesh"
        android:layout_width="match_parent"
        android:backgroundTint="#125488"
        android:layout_height="@dimen/_100sdp"
        android:layout_margin="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivRakesh"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/rakesh" />

            <TextView
                android:id="@+id/textRakeshName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toRightOf="@+id/ivRakesh"
                android:text="Rakesh kumar"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textRakeshDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@+id/textRakeshName"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toRightOf="@+id/ivRakesh"
                android:text="Roll: 2006314\nB.tech CSE\nAndroid Developer"
                android:textSize="@dimen/_16ssp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/cardRakesh"
        android:backgroundTint="#125488"
        android:layout_margin="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <ImageView
                android:id="@+id/ivUtkarsh"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:padding="@dimen/_4sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/utkarsh" />

            <TextView
                android:id="@+id/textUtkarshName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Utkarsh Kant"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textUtkarshDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textUtkarshName"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/white"
                android:text="Roll: 2006636\nB.tech CSE\nAndroid Developer"
                android:textSize="@dimen/_16ssp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/annie_use_your_telescope"
        android:text="\@warlog-initiative"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/_12ssp" />

</RelativeLayout>